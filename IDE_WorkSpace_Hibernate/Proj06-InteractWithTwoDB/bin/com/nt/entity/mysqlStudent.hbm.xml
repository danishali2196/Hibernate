<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping>
        	<class name="com.nt.entity.Student"  table="STUDENT_HIBERNATE"  lazy="true">
        	<id name="sno" column="SNO" type="int" length="10" >
        	
        	</id>
        	
        	<property name="sname" column="SNAME" type="string" length="20" />
        	<property name="course" column="COURSE" type="string" length="20" />
        	<property name="fee" column="FEE" type="int" length="5"/>
        	
        	</class>
        
        </hibernate-mapping>